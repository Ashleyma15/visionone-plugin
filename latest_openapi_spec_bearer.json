{
  "openapi": "3.0.3",
  "info": {
    "title": "Mimecast Threat Intelligence & Security Stats API",
    "version": "1.0.1",
    "description": "API specification for Mimecast Threat Intelligence and Security Statistics endpoints. Uses HTTP Bearer authentication."
  },
  "servers": [
    {
      "url": "https://api.mimecast.com"
    }
  ],
  "paths": {
    "/threats/v1/stats/gateway-detections": {
      "get": {
        "operationId": "getGatewayDetections",
        "summary": "Get Gateway Detection Stats",
        "parameters": [
          {
            "name": "timestampRangeStartsAt",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "timestampRangeEndsAt",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "type",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "enum": [
                "spam",
                "malware"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Detection stats retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/DetectionStat"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      }
    },
