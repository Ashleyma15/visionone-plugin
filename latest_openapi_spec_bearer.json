          }
        ]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "DetectionStat": {
        "type": "object",
        "properties": {
          "startTimestamp": {
            "type": "string",
            "format": "date-time"
          },
          "detectionCount": {
            "type": "integer",
            "format": "int64"
          }
        },
        "required": [
          "startTimestamp",
          "detectionCount"
        ]
      },
      "ThreatCounts": {
        "type": "object",
        "properties": {
          "spam": {
            "type": "integer",
            "format": "int64"
          },
          "malware": {
            "type": "integer",
            "format": "int64"
          },
          "phishing": {
            "type": "integer",
            "format": "int64"
          },
          "suspicious": {
            "type": "integer",
            "format": "int64"
          },
          "unwanted": {
            "type": "integer",
            "format": "int64"
          },
          "total": {
            "type": "integer",
            "format": "int64"
          }
        },
        "required": [
          "total"
        ]
      },
      "ThreatsByEntity": {
        "type": "object",
        "properties": {
          "entity": {
            "type": "string",
            "description": "Sender or recipient email address"
          },
          "status": {
            "type": "string"
          },
          "counts": {
            "$ref": "#/components/schemas/ThreatCounts"
          }
        },
        "required": [
          "entity",
          "counts"
        ]
      },
      "ThreatsByEntityResponse": {
        "type": "object",
        "properties": {
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ThreatsByEntity"
            }
          },
          "nextPageToken": {
            "type": "string"
          }
        },
        "required": [
          "items"
        ]
      }
    }
  },
  "security": [
    {
      "BearerAuth": []
    }
  ]
}